{
  "scripts": {
    "dev": "next dev",
    "clean": "rimraf .next out dist release",
    "build:web": "next build",
    "start": "next start",
    "dist:mac": "npm run build:web && electron-builder --mac zip",
    "dist:win": "npm run build:web && electron-builder --win nsis portable",
    "dist:linux": "npm run build:web && electron-builder --linux AppImage zip"
  },
  "build": {
    "appId": "com.mars.onepager",
    "productName": "Mars One-Pager",
    "asar": true,
    "files": [
      "electron/**",
      "out/**",
      "app/**",
      "components/**",
      "public/**",
      "styles/**",
      "lib/**",
      "next.config.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "out",
        "to": "out"
      }
    ],
    "mac": {
      "target": ["zip"],
      "icon": "electron/icon.icns"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "electron/icon.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "zip"]
    },
    "directories": {
      "output": "dist"
    }
  }
}
